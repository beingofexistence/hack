{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "gulp",
    "args": ["--no-color"],
    "tasks": [
        {
            "taskName": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "args": [ "default" ],
            "isBackground": false,
            "problemMatcher": [
                "$tsc",
                "$jshint"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
